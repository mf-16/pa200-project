@model WebMVC.Models.GiftCard.CreateGiftCardViewModel


<h2>Create Gift Card</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PriceReduction" class="control-label">Price reduction:</label>
        <input asp-for="PriceReduction" class="form-control" type="number" step="1" min="0" />
        <span asp-validation-for="PriceReduction" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ValidFrom" class="control-label">Valid from:</label>
        <input asp-for="ValidFrom" class="form-control" type="date" />
        <span asp-validation-for="ValidFrom" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ValidTo" class="control-label">Valid to:</label>
        <input asp-for="ValidTo" class="form-control" type="date" />
        <span asp-validation-for="ValidTo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NumberOfCoupons" class="control-label">Number of coupons:</label>
        <input asp-for="NumberOfCoupons" class="form-control" type="number" />
        <span asp-validation-for="NumberOfCoupons" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
