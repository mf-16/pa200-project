@model IEnumerable<WebMVC.Models.Publisher.PublisherViewModel>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<h2>Publishers</h2>

@{
    var isAdmin = (await AuthorizationService.AuthorizeAsync(User, "Admin")).Succeeded;
}

@if (isAdmin)
{
    <a asp-action="Create" class="btn btn-success">Create New</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>@publisher.Name</td>
                <td>@publisher.Bio</td>
                <td>
                    <a asp-action="Details" asp-route-id="@publisher.Id" class="btn btn-info">Details</a>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@publisher.Id" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@publisher.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
