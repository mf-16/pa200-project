@model WebMVC.Models.Order.CreateOrderViewModel

<div class="container mt-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <h2>Please fill out order details</h2>
    <form asp-action="Create" method="post">
        
        <div class="mb-3">
            <label asp-for="CustomerName" class="form-label">Name</label>
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CustomerEmail" class="form-label">Email</label>
            <input asp-for="CustomerEmail" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>

        <h4>Shipping Address</h4>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="ShippingAddress.Street" class="form-label">Street</label>
                <input asp-for="ShippingAddress.Street" class="form-control" />
                <span asp-validation-for="ShippingAddress.Street" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ShippingAddress.City" class="form-label">City</label>
                <input asp-for="ShippingAddress.City" class="form-control" />
                <span asp-validation-for="ShippingAddress.City" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ShippingAddress.State" class="form-label">State</label>
                <input asp-for="ShippingAddress.State" class="form-control" />
                <span asp-validation-for="ShippingAddress.State" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ShippingAddress.ZipCode" class="form-label">Zip Code</label>
                <input asp-for="ShippingAddress.ZipCode" class="form-control" />
                <span asp-validation-for="ShippingAddress.ZipCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ShippingAddress.Country" class="form-label">Country</label>
                <input asp-for="ShippingAddress.Country" class="form-control" />
                <span asp-validation-for="ShippingAddress.Country" class="text-danger"></span>
            </div>
        </div>

        <h4>Billing Address</h4>
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BillingAddress.Street" class="form-label">Street</label>
                <input asp-for="BillingAddress.Street" class="form-control" />
                <span asp-validation-for="BillingAddress.Street" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BillingAddress.City" class="form-label">City</label>
                <input asp-for="BillingAddress.City" class="form-control" />
                <span asp-validation-for="BillingAddress.City" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BillingAddress.State" class="form-label">State</label>
                <input asp-for="BillingAddress.State" class="form-control" />
                <span asp-validation-for="BillingAddress.State" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BillingAddress.ZipCode" class="form-label">Zip Code</label>
                <input asp-for="BillingAddress.ZipCode" class="form-control" />
                <span asp-validation-for="BillingAddress.ZipCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BillingAddress.Country" class="form-label">Country</label>
                <input asp-for="BillingAddress.Country" class="form-control" />
                <span asp-validation-for="BillingAddress.Country" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Confirm Order</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
