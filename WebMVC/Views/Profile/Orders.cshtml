@model List<WebMVC.Models.Order.OrderViewModel>

<h2>Your Orders</h2>

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var order in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Order ID: <span class="text-muted">@order.Id</span></h5>
                            <p class="card-text">
                                <strong>Total Amount:</strong> @order.TotalAmount.ToString("C")
                            </p>
                            <a href="@Url.Action("OrderDetail", "Profile", new { id = order.Id })" 
                               class="btn btn-primary btn-sm mt-3">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>You have no orders yet.</p>
        }
    </div>
</div>
