@model WebMVC.Models.Book.BookDetailViewModel

<div class="container mt-4">
    <div class="row">
        <!-- Book Image and Description -->
        <div class="col-md-4">
            <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid rounded shadow mb-3" />
            <h2 class="mt-3">@Model.Title</h2>
            <p><strong>Author:</strong> @Model.Author.Name</p>
            <p><strong>Publisher:</strong> @Model.Publisher.Name</p>
            <p><strong>Genre:</strong> @Model.PrimaryGenre.Name</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p>@Model.Description</p>

            <!-- Action Buttons -->
            <div class="mt-3">
                <button class="btn btn-primary me-2">Add to Cart</button>
                <button class="btn btn-secondary">Add to Wishlist</button>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="col-md-8">
            <h3>Reviews</h3>
            <div class="list-group">
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    foreach (var review in Model.Reviews)
                    {
                        <div class="list-group-item mb-2">
                            <h5>@review.User.UserName</h5>
                            <p>@review.Comment</p>
                            <small class="text-muted">Rating: @review.Stars/5</small>
                        </div>
                    }
                }
                else
                {
                    <p>No reviews yet. Be the first to review this book!</p>
                }
            </div>
        </div>
    </div>
</div>



